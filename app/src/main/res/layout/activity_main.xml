<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/principal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F0C10"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".MainActivity">

    <RadioGroup
        android:id="@+id/grupo1"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:background="#353434">

        <RadioButton
            android:id="@+id/amarelo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:onClick="amar"
            android:text="Amarelo"
            android:textAlignment="center"
            android:textColor="#FFEB3B"
            android:textColorHint="#000000"
            android:textSize="30sp" />

        <RadioButton
            android:id="@+id/azul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:onClick="az"
            android:text="Azul"
            android:textAlignment="center"
            android:textColor="#2196F3"
            android:textSize="30sp" />

        <RadioButton
            android:id="@+id/verde"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:onClick="Verde"
            android:text="Verde"
            android:textAlignment="center"
            android:textColor="#4CAF50"
            android:textSize="30sp" />

        <RadioButton
            android:id="@+id/vermelho"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:onClick="Vermelho"
            android:text="Vermelho"
            android:textAlignment="center"
            android:textColor="#F44336"
            android:textSize="30sp" />

    </RadioGroup>

    <Space
        android:layout_width="match_parent"
        android:layout_height="48dp" />

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Result"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="60dp" />

    <LinearLayout
        android:id="@+id/fundo"
        android:layout_width="match_parent"
        android:layout_height="308dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnCor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="fundo"
            android:text="Cor de Fundo" />
    </LinearLayout>

</LinearLayout>